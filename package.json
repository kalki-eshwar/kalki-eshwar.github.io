{
  "name": "kalkieshwar-portfolio",
  "version": "1.0.0",
  "description": "Professional portfolio website for KalkiEshwar",
  "homepage": "https://KalkiEshwarD.github.io/",
  "scripts": {
    "site": "npm run dev -- --port 9000",
    "dev": "npm run article; next dev",
    "prebuild": "npm run article",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "prepare": "husky install",
    "article": "node scripts/generate-articles-data.js",
    "export": "next export",
    "deploy": "npm run build && rm -rf docs/* && cp -r out/* docs/ && touch docs/.nojekyll && git add docs && git commit -m 'Deploy to docs' && git push"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.0",
    "gray-matter": "^4.0.3",
    "next": "^14.2.30",
    "next-mdx-remote": "^4.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/ms": "^2.1.0",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/unist": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.50.0",
    "eslint-config-next": "^14.0.0",
    "gh-pages": "^6.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
